{
    "spec": {
        "containers": [
            {
                "name": "maintenance",
                "image": "quay.io/fvaleri/rsync:latest",
                "command": [
                    "/bin/ash",
                    "-c",
                    "trap : TERM INT; sleep infinity & wait"
                ],
                "volumeMounts": [
                    {
                        "name": "data",
                        "mountPath": "/data"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "data",
                "persistentVolumeClaim": {
                    "claimName": "$pvc"
                }
            }
        ]
    }
}
